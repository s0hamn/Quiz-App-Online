<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/appName">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_toLeftOf="@id/appName"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="200dp"
            android:layout_marginLeft="24dp"
            android:layout_height="120dp"
            android:fontFamily="@font/fredroka_one_regular"
            android:gravity="center_vertical"
            android:text="QUIZ APP"
            android:textSize="40sp" />




    </LinearLayout>


    <EditText
        android:id="@+id/enterIDEt"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/appName"
        android:layout_marginStart="24dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/et_border"
        android:fontFamily="@font/fredroka_one_regular"
        android:gravity="center"
        android:hint="Enter Quiz ID"
        android:textColor="@color/blue"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/enterIDEt"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/joinQuizCardView"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/joinQuizTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/et_border"
                android:fontFamily="@font/fredroka_one_regular"
                android:gravity="center"
                android:text="Join Quiz"
                android:textColor="@color/light_green"
                android:textSize="30sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/createQuizCardView"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/createQuizTV"
                android:layout_width="match_parent"
                android:background="@drawable/et_border"
                android:layout_height="match_parent"
                android:fontFamily="@font/fredroka_one_regular"
                android:gravity="center"
                android:text="Create Quiz"
                android:textColor="@color/light_green"
                android:textSize="30sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/editQuizCardView"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/editQuizTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/fredroka_one_regular"
                android:gravity="center"
                android:text="Edit Quiz"
                android:textColor="@color/light_green"
                android:background="@drawable/et_border"
                android:textSize="30sp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>





</RelativeLayout>