<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/fredroka_one_regular"
            android:text="Question?"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/optionATV"
                android:text="optionA"
                android:layout_margin="4dp"
                android:gravity="center"
                android:fontFamily="@font/fredroka_one_regular"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:background="@drawable/et_border"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/optionBTV"
                android:text="optionB"
                android:layout_margin="4dp"
                android:gravity="center"
                android:fontFamily="@font/fredroka_one_regular"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:background="@drawable/et_border"
                android:layout_weight="1"
                android:layout_height="match_parent"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/optionCTV"
                android:text="optionC"
                android:layout_margin="4dp"
                android:gravity="center"
                android:fontFamily="@font/fredroka_one_regular"
                android:textSize="20sp"
                android:textColor="@color/yellow"
                android:layout_width="match_parent"
                android:background="@drawable/et_border"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/optionDTV"
                android:text="optionD"
                android:layout_margin="4dp"
                android:gravity="center"
                android:fontFamily="@font/fredroka_one_regular"
                android:textSize="20sp"
                android:textColor="@color/light_green"
                android:layout_width="match_parent"
                android:background="@drawable/et_border"
                android:layout_weight="1"
                android:layout_height="match_parent"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content"
                android:text="Correct answer : "
                android:fontFamily="@font/fredroka_one_regular"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/correctAnswerTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:textColor="@color/light_green"
                android:fontFamily="@font/fredroka_one_regular"
                android:text="correctAnswer"
                android:textSize="18sp"
                android:layout_marginStart="12dp"/>



        </LinearLayout>




    </LinearLayout>



</androidx.cardview.widget.CardView>