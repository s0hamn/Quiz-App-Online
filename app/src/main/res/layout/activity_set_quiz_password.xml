<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetQuizPasswordActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Set Quiz Password"
        android:fontFamily="@font/fredroka_one_regular"
        android:textSize="40sp"
        android:gravity="center"
        android:id="@+id/setPass"/>

    <EditText
        android:id="@+id/setPasswordEt"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/setPass"
        android:layout_marginStart="24dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/et_border"
        android:fontFamily="@font/fredroka_one_regular"
        android:gravity="center"
        android:hint="Set Password"
        android:textColor="@color/blue"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/setPasswordCardView"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/setPasswordEt"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/setPasswordTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/et_border"
            android:fontFamily="@font/fredroka_one_regular"
            android:gravity="center"
            android:text="Create Quiz"
            android:textColor="@color/light_green"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>